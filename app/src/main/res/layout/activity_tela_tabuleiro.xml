<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaua.businessgame.tela_tabuleiro">

    <LinearLayout
        android:id="@+id/rlDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="152dp"
            android:id="@+id/tv_dice2"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/valor"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/dice1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice1"
                android:layout_margin="2dp"/>

            <ImageView
                android:id="@+id/dice2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dice1"
                android:layout_margin="2dp"/>
        </LinearLayout>
    </LinearLayout>
    <WebView
        android:layout_width="match_parent"
        android:id="@+id/wv_tabuleiro"
        android:layout_height="370dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rlDados">

    </WebView>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rlDados"
        android:layout_marginTop="23dp"
        android:textSize="32sp"
        android:layout_toStartOf="@+id/rlDados" />
</RelativeLayout>
